{
  "dxt_version": "0.1",
  "name": "secure-ssh-client",
  "display_name": "Secure SSH Client",
  "version": "1.0.0",
  "description": "A secure SSH client MCP server with authentication, host verification, and audit logging",
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "name": "secure-ssh-client",
      "description": "Secure SSH client with comprehensive security features",
      "command": "node",
      "args": ["${__dirname}/server/index.js"],
      "env": {
        "DEFAULT_USERNAME": "${user_config.default_username}",
        "DEFAULT_KEY_PATH": "${user_config.default_key_path}",
        "ENABLE_AUDIT_LOG": "${user_config.enable_audit_log}",
        "SESSION_TIMEOUT": "${user_config.session_timeout}",
        "MAX_SESSIONS": "${user_config.max_sessions}"
      }
    }
  },
  "user_config": {
    "default_username": {
      "type": "string",
      "title": "Default SSH Username",
      "description": "Default username for SSH connections (can be overridden per connection)",
      "required": false
    },
    "default_key_path": {
      "type": "file",
      "title": "Default SSH Private Key",
      "description": "Path to your default SSH private key file",
      "required": false
    },
    "enable_audit_log": {
      "type": "boolean",
      "title": "Enable Audit Logging",
      "description": "Log all SSH operations for security auditing",
      "default": true,
      "required": false
    },
    "session_timeout": {
      "type": "number",
      "title": "Session Timeout (minutes)",
      "description": "Automatically disconnect idle sessions after this many minutes",
      "default": 30,
      "required": false
    },
    "max_sessions": {
      "type": "number",
      "title": "Maximum Concurrent Sessions",
      "description": "Maximum number of simultaneous SSH connections (0 for unlimited)",
      "default": 0,
      "required": false
    }
  },
  "tools": [
    {
      "name": "ssh_connect",
      "description": "Establish a secure SSH connection"
    },
    {
      "name": "ssh_execute",
      "description": "Execute a command over SSH"
    },
    {
      "name": "ssh_disconnect",
      "description": "Disconnect an SSH session"
    },
    {
      "name": "ssh_list_sessions",
      "description": "List all active SSH sessions"
    },
    {
      "name": "ssh_upload_file",
      "description": "Upload a file via SFTP"
    },
    {
      "name": "ssh_download_file",
      "description": "Download a file via SFTP"
    },
    {
      "name": "ssh_port_forward",
      "description": "Setup SSH port forwarding"
    },
    {
      "name": "ssh_manage_keys",
      "description": "Manage SSH keys and known hosts"
    },
    {
      "name": "ssh_verify_host",
      "description": "Verify SSH host key fingerprint"
    }
  ],
  "configuration": {
    "max_sessions": {
      "type": "number",
      "description": "Maximum concurrent SSH sessions",
      "default": 5
    },
    "session_timeout": {
      "type": "number",
      "description": "Session timeout in minutes",
      "default": 30
    },
    "enable_audit_log": {
      "type": "boolean",
      "description": "Enable audit logging for all SSH operations",
      "default": true
    },
    "allowed_hosts_pattern": {
      "type": "string",
      "description": "Regex pattern for allowed SSH hosts",
      "default": ".*"
    },
    "require_host_verification": {
      "type": "boolean",
      "description": "Require host key verification",
      "default": true
    },
    "enable_mfa": {
      "type": "boolean",
      "description": "Enable multi-factor authentication support",
      "default": false
    }
  },
  "platforms": ["darwin", "linux", "win32"],
  "keywords": ["ssh", "secure", "remote", "terminal", "security"]
}